{
  "name": "cvs-svc-technical-records",
  "version": "1.0.0",
  "description": "",
  "main": "src/handler.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/cvs-svc-technical-records.git"
  },
  "scripts": {
    "start": "npm run eslint && BRANCH=local ./node_modules/serverless/bin/serverless offline start",
    "debug": "export SLS_DEBUG=* && BRANCH=local node --inspect ./node_modules/serverless/bin/serverless offline start",
    "test": "BRANCH=local node_modules/.bin/mocha tests/**/*.unitTest.js",
    "test-i": "BRANCH=local node_modules/.bin/mocha tests/**/*.intTest.js",
    "dynamodb": "sls dynamodb start",
    "prepush": "BRANCH=local npm test && npm run eslint",
    "predeploy": "npm install && npm run prepush",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "eslint": "eslint . --config=.eslintrc.json --fix  -f json -o report.json",
    "generate-docs": "serverless openapi generate -o api/swagger/swagger.yaml && swagger-ui-watcher ./api/swagger/swagger.yaml",
    "sonar-scanner": "npm run eslint && npm run coverage && sonar-scanner",
    "coverage": "BRANCH=local nyc mocha tests/unit/*.unitTest.js && nyc report --reporter=lcov"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^24.1.0",
    "gulp": "^4.0.0",
    "lambda-tester": "^3.5.0",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "serverless": "^1.42.3",
    "serverless-dynamodb-local": "^0.2.37",
    "serverless-offline": "^3.27.0",
    "serverless-plugin-tracing": "^2.0.0",
    "standard": "^12.0.1",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "aws-sdk": "^2.332.0",
    "aws-xray-sdk": "^2.3.2",
    "path-parser": "^4.2.0",
    "serverless-openapi-documentation": "^0.4.0"
  }
}
